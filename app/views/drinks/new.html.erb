<div class="row">
  <%- if @drink.errors.present? -%>
    <div class="large-12 alert-box alert" data-alert>
      <ul>
        <%- @drink.errors.full_messages.each do |error| -%>
          <li><%= error %></li>
        <%- end -%>
      </ul>
    </div>
  <%- end -%>

  <div class="large-12">
    <h1>New Drink</h1>

    <%= form_for @drink do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.check_box(:featured) %>
      <%= f.label(:featured, "Featured") %>

      <%= f.label :category %>
      <%= f.select :category, Category.all.collect { |c| [ c.name ] }, include_blank: true %>

      <%= f.label :alcohol_level %>
      <%= f.radio_button(:alcohol_level, "low") %>
      <%= f.label(:alcohol_level_low, "Low") %>
      <%= f.radio_button(:alcohol_level, "medium") %>
      <%= f.label(:alcohol_level_medium, "Medium") %>
      <%= f.radio_button(:alcohol_level, "high") %>
      <%= f.label(:alcohol_level_high, "High") %>

      <%= f.submit "Add Drink" %>
    <%- end -%>
  </div>
</div>
