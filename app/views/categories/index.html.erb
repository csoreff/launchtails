<div class="row">
  <div class="large-12">
    <h1>Categories</h1>
    <%- if !@categories.empty? -%>
      <table>
        <tr>
          <th>Title</th>
          <th></th>
        </tr>

        <%- @categories.each do |category| -%>
          <tr>
            <td><%= category.name %></td>
          </tr>
        <%- end -%>
      </table>

      <%= paginate @categories %>
    <%- end -%>
  </div>
</div>