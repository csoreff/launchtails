<div class="row">
  <div class="large-12">

    <h1>Drinks</h3>
    <%- if !@drinks.empty? -%>
      <table>
        <tr>
          <th>Drink</th>
          <th></th>
        </tr>

        <%- @drinks.each do |drink| -%>
          <tr>
            <td><%= drink.title %></td>
          </tr>
        <%- end -%>
      </table>

      <%= paginate @drinks %>
    <%- end -%>
  </div>
</div>